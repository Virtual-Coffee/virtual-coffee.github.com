{
	"name": "virtualcoffee-io",
	"version": "2.0.0",
	"description": "The public site for virtualcoffee.io",
	"repository": "git://github.com/Virtual-Coffee/virtualcoffee.io.git",
	"author": "Virtual Coffee <hello@virtualcoffee.io> (https://virtualcoffee.io/)",
	"license": "CC-BY-3.0",
	"bugs": {
		"url": "https://github.com/Virtual-Coffee/virtualcoffee.io/issues"
	},
	"engines": {
		"node": ">=16"
	},
	"homepage": "https://github.com/Virtual-Coffee/virtualcoffee.io#readme",
	"sideEffects": false,
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"prepare": "husky install",
		"format": "npx prettier --write --ignore-unknown \"**/*\"",
		"lint": "eslint ./app/**/*.{js,jsx}",
		"build": "yarn build:sass && yarn build:css && yarn build:remix",
		"build:sass": "sass --load-path=node_modules styles/:.tmp/styles/",
		"build:css": "postcss .tmp/styles/**/*.css --base .tmp/styles --dir app/styles --env production",
		"build:remix": "cross-env NODE_ENV=production remix build",
		"dev": "yarn build:sass && yarn build:css && concurrently \"yarn dev:sass\" \"yarn dev:css\" \"yarn dev:remix\"",
		"dev:sass": "sass --load-path=node_modules --watch styles/:.tmp/styles",
		"dev:css": "postcss .tmp/styles/**/*.css --base .tmp/styles --dir app/styles -w",
		"dev:remix": "cross-env NODE_ENV=development netlify dev",
		"postinstall": "remix setup node",
		"start": "yarn dev",
		"analyze": "source-map-explorer 'public/build/**/*.js'"
	},
	"dependencies": {
		"@faker-js/faker": "^6.1.1",
		"@imgix/js-core": "^3.1.3",
		"@netlify/functions": "^1.0.0",
		"@remix-run/netlify": "^1.3.4",
		"@remix-run/react": "^1.3.4",
		"@sindresorhus/slugify": "^2.1.0",
		"airtable": "^0.11.3",
		"bootstrap": "^4.6.0",
		"dotenv": "^16.0.0",
		"front-matter": "^4.0.2",
		"graphql": "^16.3.0",
		"graphql-request": "^4.2.0",
		"hast-util-to-string": "^2.0.0",
		"hastscript": "^7.0.2",
		"markdown-it-attrs": "^4.0.0",
		"mdast-util-toc": "^6.1.0",
		"node-fetch": "^3.2.3",
		"only-allow": "^1.0.0",
		"prop-types": "^15.8.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^6.3.0",
		"rehype-autolink-headings": "^6.1.1",
		"rehype-highlight": "^5.0.2",
		"rehype-sanitize": "^5.0.1",
		"rehype-slug": "^5.0.1",
		"rehype-stringify": "^9.0.3",
		"remark-attr": "^0.11.1",
		"remark-parse": "^10.0.1",
		"remark-rehype": "^10.1.0",
		"remix": "^1.3.4",
		"require-dir": "^1.2.0",
		"sanitize-html": "^2.7.0",
		"unified": "^10.1.2"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^4.0.3",
		"@lodder/grunt-postcss": "^3.0.1",
		"@remix-run/dev": "^1.3.4",
		"@remix-run/eslint-config": "^1.3.4",
		"autoprefixer": "^10.4.4",
		"concurrently": "^7.0.0",
		"cross-env": "^7.0.3",
		"cssnano": "^5.1.7",
		"eslint": "^8.12.0",
		"husky": "^7.0.2",
		"lint-staged": "^11.2.0",
		"luxon": "^2.3.1",
		"markdown-it": "^12.3.2",
		"markdown-it-anchor": "^8.3.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.12",
		"postcss-cli": "^9.1.0",
		"prettier": "2.6.1",
		"sass": "^1.49.10",
		"source-map-explorer": "^2.5.2"
	},
	"main": "index.js",
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	}
}
