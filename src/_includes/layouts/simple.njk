---
layout: layouts/base.njk
---

{% from "macros/svg.njk" import svg %} {% if hero and heroHeader %}
<div class="py-4">
	<div class="container">
		<div class="row align-items-center">
			<div class="col-sm-4">{{svg(src=hero, ariaHidden=true)}}</div>
			<div class="col-sm-8">
				<h1 class="display-4">{{heroHeader}}</h1>
				{% if heroSubheader is defined %}
				<p class="lead">{{heroSubheader}}</p>
				{% endif %}
			</div>
		</div>
	</div>
</div>
{% elif heroHeader %}
<div class="container container-simple prose pt-5">
	<h1 class="display-4">{{heroHeader}}</h1>
	{% if heroSubheader is defined %}
	<p class="lead">{{heroSubheader}}</p>
	{% endif %}
</div>
{% endif %}
<main id="maincontent" class="container container-simple prose py-5">
	{{ content | safe }}
</main>
